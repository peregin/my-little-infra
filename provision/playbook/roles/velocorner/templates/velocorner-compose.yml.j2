version: "3.7"
services:

  psql_database:
    image: postgres:12.2-alpine
    volumes:
      - {{ velocorner_dir }}/psql/data:/var/lib/postgresql/data
    ports:
      - 5432:5432
    environment:
      POSTGRES_PASSWORD: "{{ lookup('env', 'ADMIN_PASSWORD') }}"
      POSTGRES_USER: velocorner
      POSTGRES_DB: velocorner
    deploy:
      restart_policy:
        condition: on-failure
        delay: 600s
        max_attempts: 1
    networks:
      - backend

  web-app:
    image: peregin/velocorner.com:latest
    command: -Dconfig.file=/web-app/config/web-app.conf {{ log_parameter }}
    volumes:
      - {{ velocorner_dir }}/web-app:/web-app/
    ports:
      - 9000:9000
    environment:
      HOST_OS_VERSION: "{{ ansible_distribution }} {{ ansible_distribution_version }}"
    deploy:
      resources:
        limits:
          memory: 512M
        reservations:
          memory: 256M
      restart_policy:
        condition: on-failure
        delay: 10s
        max_attempts: 3
    networks:
      - backend

  crawler:
    image: peregin/velocorner.crawler:latest
    ports:
      - 9011:9011
    deploy:
      resources:
        limits:
          memory: 256M
        reservations:
          memory: 128M
      restart_policy:
        condition: on-failure
        delay: 10s
        max_attempts: 3
    networks:
      - backend

  rates:
    image: peregin/velocorner.rates:latest
    ports:
      - 9012:9012
    deploy:
      resources:
        limits:
          memory: 128M
        reservations:
          memory: 64M
      restart_policy:
        condition: on-failure
        delay: 10s
        max_attempts: 3
    networks:
      - backend

  weather:
    image: peregin/velocorner.weather:latest
    volumes:
      - {{ velocorner_dir }}/web-app:/weather/
    ports:
      - 9015:9015
    environment:
      CONFIG_FILE: "/weather/config/web-app.conf"
    deploy:
      resources:
        limits:
          memory: 256M
        reservations:
          memory: 128M
      restart_policy:
        condition: on-failure
        delay: 10s
        max_attempts: 3
    networks:
      - backend

  web-front:
    image: peregin/web-front:latest
    ports:
      - 3000:3000
    environment:
      - API_HOST=http://web-app:9000
      - NODE_ENV=production
    deploy:
      resources:
        limits:
          memory: 512M
        reservations:
          memory: 256M
      restart_policy:
        condition: on-failure
        delay: 10s
        max_attempts: 3
    networks:
      - backend

networks:
  backend: