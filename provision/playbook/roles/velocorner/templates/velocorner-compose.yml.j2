version: "3.7"
services:

  psql_database:
    image: postgres:12.2-alpine
    volumes:
      - {{ velocorner_dir }}/psql/data:/var/lib/postgresql/data
    ports:
      - 5432:5432
    environment:
      POSTGRES_PASSWORD: "{{ lookup('env', 'ADMIN_PASSWORD') }}"
      POSTGRES_USER: velocorner
      POSTGRES_DB: velocorner
    deploy:
      restart_policy:
        condition: on-failure
        delay: 5s
        max_attempts: 3
    networks:
      - backend

  web-app:
    image: peregin/velocorner.com:latest
    command: -Dconfig.file=/web-app/config/web-app.conf {{ web_app_parameter }}
    volumes:
      - {{ velocorner_dir }}/web-app:/web-app/
    ports:
      - 9000:9000
    environment:
      HOST_OS_VERSION: "{{ ansible_distribution }} {{ ansible_distribution_version }}"
    deploy:
      resources:
        limits:
          memory: 700M
        reservations:
          memory: 200M
      restart_policy:
        condition: on-failure
        delay: 5s
        max_attempts: 3
    networks:
      - backend
    depends_on:
      - psql_database

  web-front:
    image: peregin/web-front:latest
    ports:
      - 3000:3000
    environment:
      - API_HOST=http://web-app:9000
      - NODE_ENV=development
    deploy:
      resources:
        limits:
          memory: 500M
        reservations:
          memory: 200M
      restart_policy:
        condition: on-failure
        delay: 5s
        max_attempts: 3
    networks:
      - backend

networks:
  backend: